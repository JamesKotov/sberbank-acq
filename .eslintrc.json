{
    "env": {
        "browser": false,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-jest"
    ],
    "rules": {
        "import/prefer-default-export": 0,
        "class-methods-use-this": 0,
        "import/extensions": 0,

        "no-shadow": 0,
        "@typescript-eslint/no-shadow": 2,

        "no-unused-vars": 0,
        "@typescript-eslint/no-unused-vars": 2
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
